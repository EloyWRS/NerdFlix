@model Movies_MVC_6.Models.MovieViewModels.MovieIndexData
@{
    ViewData["Title"] = "Index";    
}

<body class="container-fluid">

    <table class="table">        
        <tbody>
            
            @foreach (var item in Model.Movies)
            {
                <tr class="text-center">
                    <td>
                        <a asp-controller="AvailableMovies" asp-action="Movie" asp-route-id="@item.MovieID">@Html.DisplayFor(modelItem => item.Name)</a>  
                    </td>                
                </tr>
            }
        </tbody>
    </table>
    </body>

